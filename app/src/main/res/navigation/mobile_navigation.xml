<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bridal.ui.homefragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_settingsAccountFragment"
            app:destination="@id/settingsAccountFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.example.bridal.ui.dashboardfragment.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/myAddsFragment"
        android:name="com.example.bridal.ui.myaddsfragment.MyAddsFragment"
        android:label="@string/title_my_adds"
        tools:layout="@layout/fragment_my_adds" >
        <action
            android:id="@+id/action_myAddsFragment_to_addProductFragment"
            app:destination="@id/addProductFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/myAddsFragment" />
    </fragment>

    <fragment
        android:id="@+id/myAccountFragment"
        android:name="com.example.bridal.ui.myaccountfragment.MyAccountFragment"
        android:label="@string/title_my_account"
        tools:layout="@layout/fragment_my_account" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.bridal.ui.splashfragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/mobile_navigation" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bridal.ui.loginfragment.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/mobile_navigation" />
        <action
            android:id="@+id/action_loginFragment_to_completeProfileFragment"
            app:destination="@id/completeProfileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.bridal.ui.registerfragment.RegisterFragment"
        android:label="@string/title_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/mobile_navigation" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.example.bridal.ui.forgetpasswordfragment.ForgetPasswordFragment"
        android:label="@string/title_forgetPassword"
        tools:layout="@layout/fragment_forget_password" >
        <action
            android:id="@+id/action_forgetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/mobile_navigation" />
    </fragment>
    <fragment
        android:id="@+id/settingsAccountFragment"
        android:name="com.example.bridal.ui.settingsaccountfragment.SettingsAccountFragment"
        tools:layout="@layout/fragment_settings_account" >
        <action
            android:id="@+id/action_settingsAccountFragment_to_completeProfileFragment"
            app:destination="@id/completeProfileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/settingsAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.bridal.ui.addproductfragment.AddProductFragment"
        android:label="@string/title_add_product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.bridal.ui.productfragment.ProductFragment"
        android:label="@string/title_product"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/completeProfileFragment"
        android:name="com.example.bridal.ui.completeprofilefragment.CompleteProfileFragment"
        android:label="@string/title_complete_profile"
        tools:layout="@layout/fragment_complete_profile" >
        <action
            android:id="@+id/action_completeProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/mobile_navigation" />
    </fragment>

</navigation>