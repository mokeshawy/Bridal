<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="registerFragment"
            type="com.example.bridal.ui.registerfragment.RegisterViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.registerfragment.RegisterFragment"
        android:background="@drawable/brido"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="291dp"
                android:layout_height="40dp"
                android:layout_marginTop="204dp"
                android:gravity="center"
                android:text="@string/signupher"
                android:textColor="@color/back"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_first_name_input_text"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="@string/fst_name"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textAlignment="center"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:hintTextColor="@color/clicked"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:drawableEnd="@drawable/ic_vector_person"
                    android:drawableTint="@color/clicked"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="15"
                    android:paddingStart="5dp"
                    android:text="@={registerFragment.etFirstName}"
                    android:textColorHint="@color/grey"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_last_name_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:ems="10"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/page"
                android:outlineSpotShadowColor="@color/page"
                android:paddingStart="1dp"
                android:textColorHint="@color/grey"
                app:hintTextColor="@color/clicked"
                app:layout_constraintEnd_toEndOf="@+id/et_first_name_input_text"
                app:layout_constraintStart_toStartOf="@+id/et_first_name_input_text"
                app:layout_constraintTop_toBottomOf="@+id/et_first_name_input_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_last_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:drawableEnd="@drawable/ic_vector_person"
                    android:drawableTint="@color/clicked"
                    android:ems="10"
                    android:hint="@string/scnd_name"
                    android:inputType="textPersonName"
                    android:paddingStart="5dp"
                    android:text="@={registerFragment.etLastName}"
                    android:textColorHint="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_email_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="@string/em"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/grey"
                app:hintTextColor="@color/clicked"
                app:layout_constraintEnd_toEndOf="@+id/et_last_name_input_text"
                app:layout_constraintStart_toStartOf="@+id/et_last_name_input_text"
                app:layout_constraintTop_toBottomOf="@+id/et_last_name_input_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:drawableEnd="@drawable/emailo"
                    android:drawablePadding="100dp"
                    android:drawableTint="@color/clicked"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingStart="5dp"
                    android:text="@={registerFragment.etEmail}"
                    android:textColorHint="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_password_input_text"
                android:layout_width="330dp"
                android:layout_height="60dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingStart="1dp"
                android:textColorHint="@color/grey"
                app:hintTextColor="@color/clicked"
                app:layout_constraintEnd_toEndOf="@+id/et_email_input_text"
                app:layout_constraintStart_toStartOf="@+id/et_email_input_text"
                app:layout_constraintTop_toBottomOf="@+id/et_email_input_text"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/clicked">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:foregroundTint="#F3EDE6"
                    android:hint="@string/pass"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:paddingStart="5dp"
                    android:text="@={registerFragment.etPassword}"
                    android:textColorHint="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_confirm_password_input_text"
                android:layout_width="330dp"
                android:layout_height="60dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="@string/confpass"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingStart="1dp"
                android:paddingLeft="12dp"
                android:textColorHint="@color/grey"
                app:hintTextColor="@color/clicked"
                app:layout_constraintEnd_toEndOf="@+id/et_password_input_text"
                app:layout_constraintStart_toStartOf="@+id/et_password_input_text"
                app:layout_constraintTop_toBottomOf="@+id/et_password_input_text"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/clicked">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:foregroundTint="@color/page"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:paddingStart="1dp"
                    android:text="@={registerFragment.etConfirmPassword}"
                    android:textColorHint="@color/grey" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="213dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background"
                android:text="@string/reg"
                app:layout_constraintEnd_toEndOf="@+id/et_confirm_password_input_text"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="@+id/et_confirm_password_input_text"
                app:layout_constraintTop_toBottomOf="@+id/et_confirm_password_input_text" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="@string/login"
                android:textColor="#1976D3"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="@string/ALRDRy"
                android:textColor="@color/clicked"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_submit"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="@+id/btn_submit"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit"
                app:layout_constraintVertical_bias="0.194" />

            <ProgressBar
                android:id="@+id/loading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/clicked"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>