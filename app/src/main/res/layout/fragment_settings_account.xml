<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settingsAccountFragment"
            type="com.example.bridal.ui.settingsaccountfragment.SettingsAccountViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settingsaccountfragment.SettingsAccountFragment"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <FrameLayout
                android:id="@+id/fl_header_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_image_height">

                <ImageView
                    android:id="@+id/iv_header_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/content_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/group" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_settings_activity"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/toolbar_title_paddingStart"
                        android:paddingEnd="0dp"
                        android:textColor="#ffff"
                        android:textSize="@dimen/toolbar_title_text_size"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.Toolbar>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_user_image"
                android:layout_width="@dimen/settings_user_image_size"
                android:layout_height="@dimen/settings_user_image_size"
                android:background="@drawable/border_background"
                android:layout_below="@id/fl_header_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/settings_user_image_marginTop">

                <ImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/settings_user_picture_margin"
                    android:contentDescription="@string/content_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image_profile" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/fl_header_bg"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_grey_border_background"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="@dimen/settings_edit_label_marginStartEnd"
                    android:paddingTop="@dimen/settings_edit_label_marginTopBottom"
                    android:paddingEnd="@dimen/settings_edit_label_marginStartEnd"
                    android:paddingBottom="@dimen/settings_edit_label_marginTopBottom"
                    android:text="@string/lbl_edit"
                    android:textColor="@color/clicked"
                    android:textSize="@dimen/settings_edit_label_textSize"
                    android:backgroundTint="@color/back"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/item_grey_border_background"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="@dimen/settings_edit_label_marginStartEnd"
                    android:paddingTop="@dimen/settings_edit_label_marginTopBottom"
                    android:paddingEnd="@dimen/settings_edit_label_marginStartEnd"
                    android:paddingBottom="@dimen/settings_edit_label_marginTopBottom"
                    android:text="@string/btn_lbl_logout"
                    android:textColor="@color/clicked"
                    android:textSize="@dimen/settings_edit_label_textSize"
                    android:backgroundTint="@color/back"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_user_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/settings_name_marginTop"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_name_textSize"
                tools:text="Mohamed Keshawy"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/settings_info_marginTop"
                android:textColor="@color/back"
                android:textSize="@dimen/settings_info_textSize"
                tools:text="mokeshaw@gmail.com" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/settings_info_marginTop"
                android:textColor="@color/back"
                android:textSize="@dimen/settings_info_textSize"
                tools:text="00201007169654" />

            <LinearLayout
                android:id="@+id/ll_check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/tv_phone_number">

                <CheckBox
                    android:id="@+id/rb_allow_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_phone_number"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/settings_info_marginTop"
                    android:textColor="@color/back"
                    android:textColorHint="@color/back"
                    android:buttonTint="@color/page"/>

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/settings_info_marginTop"
                    android:textSize="@dimen/settings_info_textSize"
                    android:text="@string/allow"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rb_change_language"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/ll_check_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/settings_info_marginTop"
                android:textColor="@color/back"
                android:textSize="@dimen/settings_info_textSize"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/en"
                    android:buttonTint="@color/page"/>
                <RadioButton
                    android:id="@+id/radio_arabic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ar"
                    android:buttonTint="@color/page"/>

            </RadioGroup>

            <Button
                android:id="@+id/btn_change_language"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/title_btn_change_language"
                android:textSize="13sp"
                android:layout_marginStart="165dp"
                android:layout_below="@id/rb_change_language"/>
        </RelativeLayout>
    </ScrollView>
</layout>